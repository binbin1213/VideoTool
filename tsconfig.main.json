{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "dist/main",
    "rootDir": "src",
    "noEmit": false,
    "jsx": "preserve",
    "allowImportingTsExtensions": false,
    "isolatedModules": false,
    "esModuleInterop": true,
    "composite": true
  },
  "include": ["src/main/**/*", "src/shared/**/*", "src/types/**/*"],
  "exclude": ["node_modules", "dist", "release"]
}

