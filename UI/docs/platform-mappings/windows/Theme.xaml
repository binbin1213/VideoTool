<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <!-- Colors -->
  <Color x:Key="Color.Brand.Primary">#FF6A00</Color>
  <Color x:Key="Color.Text.Primary.Light">#111827</Color>
  <Color x:Key="Color.Text.Primary.Dark">#F3F4F6</Color>
  <Color x:Key="Color.Border.Light">#E5E7EB</Color>
  <Color x:Key="Color.Border.Dark">#2A2F3A</Color>
  <Color x:Key="Color.Focus">#2680EB</Color>

  <!-- Brushes (bind to system theme externally or via DynamicResource switch) -->
  <SolidColorBrush x:Key="Brush.Text.Primary" Color="{StaticResource Color.Text.Primary.Light}"/>
  <SolidColorBrush x:Key="Brush.Border" Color="{StaticResource Color.Border.Light}"/>
  <SolidColorBrush x:Key="Brush.Brand.Primary" Color="{StaticResource Color.Brand.Primary}"/>
  <SolidColorBrush x:Key="Brush.Focus" Color="{StaticResource Color.Focus}"/>

  <!-- Typography -->
  <FontFamily x:Key="Font.Sans">Segoe UI Variable</FontFamily>
  <FontFamily x:Key="Font.Mono">Consolas</FontFamily>
  <sys:Double x:Key="FontSize.XS">12</sys:Double>
  <sys:Double x:Key="FontSize.SM">13</sys:Double>
  <sys:Double x:Key="FontSize.MD">14</sys:Double>
  <sys:Double x:Key="FontSize.LG">16</sys:Double>
  <sys:Double x:Key="FontSize.XL">20</sys:Double>

  <!-- Spacing / Radius -->
  <Thickness x:Key="Space.0">0</Thickness>
  <Thickness x:Key="Space.2">2</Thickness>
  <Thickness x:Key="Space.4">4</Thickness>
  <Thickness x:Key="Space.8">8</Thickness>
  <sys:Double x:Key="Radius.SM">4</sys:Double>
  <sys:Double x:Key="Radius.MD">8</sys:Double>

  <!-- Control Sizes -->
  <sys:Double x:Key="Button.Height.SM">28</sys:Double>
  <sys:Double x:Key="Button.Height.MD">32</sys:Double>
  <sys:Double x:Key="Button.Height.LG">36</sys:Double>

  <!-- Example Styles -->
  <Style x:Key="HB.PrimaryButton" TargetType="Button">
    <Setter Property="FontFamily" Value="{StaticResource Font.Sans}"/>
    <Setter Property="FontSize" Value="{StaticResource FontSize.LG}"/>
    <Setter Property="Foreground" Value="White"/>
    <Setter Property="Background" Value="{StaticResource Brush.Brand.Primary}"/>
    <Setter Property="Height" Value="{StaticResource Button.Height.MD}"/>
    <Setter Property="Padding" Value="12,0"/>
    <Setter Property="BorderBrush" Value="{StaticResource Brush.Brand.Primary}"/>
    <Setter Property="BorderThickness" Value="1"/>
  </Style>

  <Style x:Key="HB.TextBox" TargetType="TextBox">
    <Setter Property="FontFamily" Value="{StaticResource Font.Sans}"/>
    <Setter Property="FontSize" Value="{StaticResource FontSize.MD}"/>
    <Setter Property="Height" Value="32"/>
    <Setter Property="Padding" Value="12,0"/>
    <Setter Property="BorderBrush" Value="{StaticResource Brush.Border}"/>
    <Setter Property="BorderThickness" Value="1"/>
  </Style>

</ResourceDictionary>

