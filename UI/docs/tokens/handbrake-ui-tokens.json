{
  "color": {
    "brand": {
      "primary": "#FF6A00",
      "primary-600": "#E65F00",
      "primary-700": "#CC5400"
    },
    "neutral": {
      "0": "#FFFFFF",
      "50": "#F9FAFB",
      "100": "#F3F4F6",
      "200": "#E5E7EB",
      "300": "#D1D5DB",
      "400": "#9CA3AF",
      "500": "#6B7280",
      "600": "#4B5563",
      "700": "#374151",
      "800": "#1F2937",
      "900": "#111827"
    },
    "semantic": {
      "info": "#2680EB",
      "success": "#2EAE4E",
      "warning": "#F59E0B",
      "danger": "#E5484D"
    },
    "theme": {
      "light": {
        "bg": "#FFFFFF",
        "surface": "#F9FAFB",
        "surface-elev1": "#FFFFFF",
        "text-primary": "#111827",
        "text-secondary": "#4B5563",
        "text-disabled": "#9CA3AF",
        "border": "#E5E7EB",
        "focus": "#2680EB"
      },
      "dark": {
        "bg": "#0B0F14",
        "surface": "#121821",
        "surface-elev1": "#0F141C",
        "text-primary": "#F3F4F6",
        "text-secondary": "#CBD5E1",
        "text-disabled": "#8B95A7",
        "border": "#2A2F3A",
        "focus": "#2680EB"
      }
    }
  },
  "state": {
    "alpha": { "hover": 0.04, "pressed": 0.08, "selected": 0.12 },
    "opacity": { "disabled": 0.38 }
  },
  "typography": {
    "family": {
      "sans": {
        "macos": ["-apple-system", "SF Pro Text", "Helvetica Neue", "Arial"],
        "windows": ["Segoe UI Variable", "Segoe UI", "Arial"],
        "gtk": ["Inter", "Cantarell", "Noto Sans", "Arial"]
      },
      "mono": ["SF Mono", "Menlo", "Consolas", "Courier New"]
    },
    "size": { "xs": 12, "sm": 13, "md": 14, "lg": 16, "xl": 20, "xxl": 24 },
    "lineHeight": { "xs": 16, "sm": 18, "md": 20, "lg": 22, "xl": 26, "xxl": 30 },
    "weight": { "regular": 400, "medium": 500, "semibold": 600 }
  },
  "space": { "0": 0, "1": 4, "2": 8, "3": 12, "4": 16, "5": 20, "6": 24, "8": 32, "10": 40, "12": 48 },
  "radius": { "sm": 4, "md": 8, "lg": 12, "pill": 999 },
  "shadow": {
    "none": "0 0 0 rgba(0,0,0,0)",
    "sm": "0 1px 2px rgba(0,0,0,0.12)",
    "md": "0 2px 8px rgba(0,0,0,0.16)",
    "lg": "0 8px 24px rgba(0,0,0,0.18)"
  },
  "icon": { "size": { "sm": 16, "md": 20, "lg": 24, "xl": 32 }, "stroke": 1.5 },
  "control": {
    "button": {
      "height": { "sm": 28, "md": 32, "lg": 36 },
      "paddingX": { "sm": 10, "md": 12, "lg": 16 },
      "radius": "md"
    },
    "input": {
      "height": { "sm": 28, "md": 32, "lg": 36 },
      "paddingX": { "sm": 10, "md": 12, "lg": 12 },
      "radius": "sm"
    },
    "checkbox": { "size": 16 },
    "switch": { "height": 20, "width": 36 },
    "segment": { "height": 28, "gap": 1, "radius": "md" },
    "tab": { "height": 32, "indicator": 2 },
    "list": { "rowHeight": { "sm": 28, "md": 32, "lg": 40 } }
  },
  "motion": {
    "duration": { "fast": 120, "normal": 180, "slow": 240 },
    "easing": {
      "standard": "cubic-bezier(0.2, 0, 0, 1)",
      "decelerate": "cubic-bezier(0, 0, 0.2, 1)",
      "accelerate": "cubic-bezier(0.3, 0, 1, 1)"
    }
  },
  "grid": {
    "base": 8,
    "padding": { "window": 16 },
    "sectionGap": 24,
    "maxContentWidth": 1240,
    "breakpoint": { "compact": 1120, "spacious": 1440 }
  }
}


