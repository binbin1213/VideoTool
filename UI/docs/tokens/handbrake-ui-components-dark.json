{
  "Button": {
    "Primary": {
      "default": { "bg": "color.brand.primary", "text": "#0B0F14", "border": "color.brand.primary" },
      "hover": { "overlay": "state.alpha.hover" },
      "pressed": { "overlay": "state.alpha.pressed" },
      "focus": { "ring": "color.theme.dark.focus" },
      "disabled": { "opacity": "state.opacity.disabled" }
    },
    "Neutral": {
      "default": { "bg": "color.theme.dark.surface-elev1", "text": "color.theme.dark.text-primary", "border": "color.theme.dark.border" },
      "hover": { "overlay": "state.alpha.hover" },
      "pressed": { "overlay": "state.alpha.pressed" },
      "focus": { "ring": "color.theme.dark.focus" },
      "disabled": { "opacity": "state.opacity.disabled" }
    },
    "Danger": {
      "default": { "bg": "color.semantic.danger", "text": "#0B0F14", "border": "color.semantic.danger" },
      "hover": { "overlay": "state.alpha.hover" },
      "pressed": { "overlay": "state.alpha.pressed" },
      "focus": { "ring": "color.theme.dark.focus" },
      "disabled": { "opacity": "state.opacity.disabled" }
    }
  },
  "Input": {
    "default": { "bg": "color.theme.dark.surface-elev1", "text": "color.theme.dark.text-primary", "border": "color.theme.dark.border" },
    "hover": { "border": "color.theme.dark.border" },
    "focus": { "border": "color.theme.dark.focus", "ring": "color.theme.dark.focus" },
    "error": { "border": "color.semantic.danger" },
    "placeholder": { "text": "color.theme.dark.text-secondary" },
    "disabled": { "opacity": "state.opacity.disabled" }
  },
  "Tabs": {
    "default": { "text": "color.theme.dark.text-secondary" },
    "active": { "text": "color.theme.dark.text-primary", "indicator": "color.brand.primary" },
    "hover": { "overlay": "state.alpha.hover" }
  },
  "ListRow": {
    "default": { "bg": "color.theme.dark.surface", "text": "color.theme.dark.text-primary" },
    "hover": { "overlay": "state.alpha.hover" },
    "selected": { "overlay": "state.alpha.selected", "border": "color.brand.primary" }
  },
  "ToolbarButton": {
    "default": { "icon": "color.theme.dark.text-primary" },
    "hover": { "overlay": "state.alpha.hover" },
    "pressed": { "overlay": "state.alpha.pressed" },
    "disabled": { "opacity": "state.opacity.disabled" }
  },
  "Progress": {
    "bar": { "height": 4, "fg": "color.brand.primary", "fgAlpha": 0.7, "bg": "color.theme.dark.border" },
    "indeterminate": { "duration": "motion.duration.normal" }
  },
  "Alert": {
    "info":    { "icon": "color.semantic.info",    "border": "color.semantic.info",    "bg": "color.semantic.info",    "bgAlpha": 0.08 },
    "success": { "icon": "color.semantic.success", "border": "color.semantic.success", "bg": "color.semantic.success", "bgAlpha": 0.08 },
    "warning": { "icon": "color.semantic.warning", "border": "color.semantic.warning", "bg": "color.semantic.warning", "bgAlpha": 0.08 },
    "danger":  { "icon": "color.semantic.danger",  "border": "color.semantic.danger",  "bg": "color.semantic.danger",  "bgAlpha": 0.08 }
  }
}


